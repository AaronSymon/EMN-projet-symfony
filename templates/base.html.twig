<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}

            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}"
        {% endblock %}

        {% block javascripts %}

        {% endblock %}
    </head>
    <body>

    <header>

        {%  set menuAdmin = {"Accueil":"app_accueil","Sorties":"app_sortie_afficher","Ville":"app_ville","Sites":"app_sites","Mon profil":"app_mon_profil" , "Se deconnecter":"app_logout"} %}
        {%  set menuConnected = {"Accueil":"app_accueil","Sorties":"app_sortie_afficher","Mon profil":"app_mon_profil" , "Se deconnecter":"app_logout"} %}
        {%  set menuNotConnected = {"Accueil":"app_accueil","S'inscrire":"app_register", "Se Connecter":"app_login"} %}

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
            <div class="container-fluid">

                {# Bouton pour menu deroulant #}
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    <span>All options</span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    {% if is_granted("ROLE_ADMIN") %}{
                    <ul class="navbar-nav">
                        {% for key,value in menuAdmin %}
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{ path(value)}}">{{ key }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                    {% elseif is_granted("ROLE_USER") %}{
                        <ul class="navbar-nav">
                            {% for key,value in menuConnected %}
                                <li class="nav-item">
                                    <a class="nav-link" aria-current="page" href="{{ path(value) }}">{{ key }}</a>
                                </li>}
                            {% endfor %}
                        </ul>

                    {% else %}{
                        <ul class="navbar-nav">
                        {% for key,value in menuNotConnected %}
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="{{ path(value) }}">{{ key }}</a>
                            </li>}
                        {% endfor %}
                    </ul>
                    {% endif %}
                </div>
            </div>
        </nav>

    </header>

        {% block main %}

        {% endblock %}

    <footer class=" text-white text-center text-lg-start bg-dark">
        <!-- Grid container -->
        <div class="container p-4">
            <!--Grid row-->
            <div class="row mt-4">

                <!--Grid column-->
                <div  class="col-6 offset-3">
                    <h5 class="text-uppercase text-center  pb-1">Contact</h5>

                    <ul class="fa-ul text-center" style="padding: 0%;">
                        <li class="mb-3" style="list-style: none">
                            <span class="fa-li">Angers, France</span>
                        </li>
                        <li class="mb-3" style="list-style: none">
                            <span class="fa-li">projetsortie@sortirquelquepart.fr</span>
                        </li>
                        <li class="mb-3" style="list-style: none">
                            <span class="fa-li">06.66.66.66.66</span>
                        </li>
                    </ul>
                </div>
                <!--Grid column-->
            </div>
            <!--Grid row-->
        </div>
        <!-- Grid container -->

        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © Projet Sortir : Marc, Nael, Edoaurd
        </div>
        <!-- Copyright -->
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>

</body>
</html>
