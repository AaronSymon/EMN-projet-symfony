    <header>

        {%  set menuAdmin = {"Accueil":"app_accueil","Sorties":"app_sortie_afficher","Ville":"app_ville_index","Sites":"app_sites","Mon profil":"app_mon_profil" , "Se deconnecter":"app_logout"} %}
        {%  set menuConnected = {"Accueil":"app_accueil","Sorties":"app_sortie_afficher","Mon profil":"app_mon_profil" , "Se deconnecter":"app_logout"} %}
        {%  set menuNotConnected = {"Accueil":"app_accueil","S'inscrire":"app_register", "Se Connecter":"app_login"} %}

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
            <div class="container-fluid">

                {# Bouton pour menu deroulant #}
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    <span>All options</span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    {% if is_granted("ROLE_ADMIN") %}{
                    <ul class="navbar-nav">
                        {% for key,value in menuAdmin %}
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{ path(value)}}">{{ key }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                    {% elseif is_granted("ROLE_USER") %}{
                        <ul class="navbar-nav">
                            {% for key,value in menuConnected %}
                                <li class="nav-item">
                                    <a class="nav-link" aria-current="page" href="{{ path(value) }}">{{ key }}</a>
                                </li>}
                            {% endfor %}
                        </ul>

                    {% else %}{
                        <ul class="navbar-nav">
                        {% for key,value in menuNotConnected %}
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="{{ path(value) }}">{{ key }}</a>
                            </li>}
                        {% endfor %}
                    </ul>
                    {% endif %}
                </div>
                <a href="#" class="pull-left"><img id="logo" src="{{ asset('images/logo.png') }}" alt="Logo"></a>
            </div>
        </nav>

