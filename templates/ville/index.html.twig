{% extends 'base.html.twig' %}

{% block title %}Hello VillesController!{% endblock %}

{% block main %}
    <h1 style="text-align: center"><strong>GÃ©rer les villes</strong> </h1>
    <H3>Filtrer les villes</H3>

    <div class="container">

       Filtrer les villes
        <div class="row">
            <div class="col-4">
                    <label >Le nom contient  :</label> <input type="search"> <button type="button">Rechercher</button>
            </div>
            <div class="col-8 offset-2">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Ville</th>
                        <th scope="col">Code Postal</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for ville in villesList %}
                            <tr>

                                <td>{{ ville.nom }}</td>
                                <td>{{ ville.codePostal }}</td>
                                <td>
                                    <button class="btn btn-success" id="btn-ajouter"><a href="{{ path('app_ajouter') }}" style="text-decoration-line: none">
