{% extends 'base.html.twig' %}

{% block title %}MonProfil!{% endblock %}

{% block main %}
    <div class="container">

        <div class="row">

            <div class="col-4">
                {% if app.user.photo %}
                <div class="card" style="width: 12rem;">
                    <img src="{{ asset('uploads/'~ app.user.photo) }}" width="10%" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{ app.user.pseudo }}</h5>
                    </div>
                    {% else %}
                        <img src="https://www.excel-downloads.com/data/avatars/o/362/362988.jpg?1637756820" alt="Avata"
                             width="5%">
                    {% endif %}
                </div>
            </div>



            <div class="Form-control col-8 ">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                <label class="col-sm-2 col-form-label">Prenom :</label>
                <label class="col-sm-2 col-form-label"><strong>{{ app.user.prenom}}</strong></label><br>


                <label class="col-sm-2 col-form-label">nom :</label>
                <label class="col-sm-2 col-form-label"> <strong>{{ app.user.nom}}</strong>  </label><br>

                <label class="col-sm-2 col-form-label">Telephone :</label>
                <label class="col-sm-2 col-form-label"><strong>{{ app.user.telephone}} </strong></label><br>

                <label class="col-sm-2 col-form-label">Email :</label>
                <label class="col-sm-2 col-form-label"><strong>{{ app.user.email}}  </strong></label><br>

                <button onclick="location.href = '{{ path('app_modifier') }}';" id="myButton" class="btn btn-success my-3" >Modifier</button>
                <button onclick="location.href = '{{ path('app_accueil') }}';" id="myButton" class="btn btn-danger my-3" >Retour</button>

            </div>

        </div>
    </div>
{% endblock %}


